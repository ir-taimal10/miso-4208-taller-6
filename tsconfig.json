{
  "compilerOptions": {
    "target": "es2015",
    "lib": [
      "es2015"
    ],
    "types": [
      "node",
      "reflect-metadata"
    ],
    "typeRoots": [
      "node_modules/@types"
    ],
    "module": "commonjs",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "sourceMap": true,
    "declaration": false,
    "outDir": "./build"
  },
  "exclude": [
    "node_modules"
  ]
}